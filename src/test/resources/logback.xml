<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date{ISO8601} [%thread] [%level] %logger{24} - %msg%n</Pattern>
        </layout>
    </appender>
    <logger name="com.github.esmusssein.unittest.kafka" level="INFO"/>
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>